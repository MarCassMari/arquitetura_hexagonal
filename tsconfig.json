{
    "compilerOptions": {
        "target": "ES2024",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["ES2024","DOM"],
        "strict": true,
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleDetection": "force",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
},
"include": ["src"]  
}